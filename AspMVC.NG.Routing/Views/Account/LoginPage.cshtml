@*login page*@ 
<br />
<div class="col-md-4 col-md-offset-4">
    <form class="form-horizontal" ng-submit="Login()">
        <fieldset>
            <legend class="blog-title" align="right">LOGIN</legend>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="emailAddress">Email</label>
                <div class="col-lg-10">
                    <input class="form-control" type="email" ng-model="loginForm.emailAddress" id="emailAddress">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label" for="password">Password</label>
                <div class="col-lg-10">
                    <input class="form-control" type="password" id="password" ng-model="loginForm.password">
                </div>
            </div>
            @*<div class="form-group" ng-show="loginForm.loginFailure">
                <label class="col-lg-2 control-label" for="password"></label>
                <div class="col-lg-10">
                    User is not found.
                </div>
            </div>*@
            <div class="alert alert-dismissible alert-danger" ng-show="loginForm.loginFailure">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Oh snap!</strong> Email and Password are not matched. Pleas try again!
            </div>
            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button class="btn btn-default" type="reset">Cancel</button>
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
            </div>

        </fieldset>
    </form>
</div>
<div ng-if="loginForm.loginFailure">
    
</div>
